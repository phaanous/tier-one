pipeline {
    agent any

    parameters {        
        string(name: 'BRANCH_TO_BUILD', defaultValue: 'develop', description: 'The target branch')
    }

    stages {

        stage('Feature Build Tier One') {

            steps {                
                echo 'Building..'
                echo env.BRANCH_NAME
                sleep(10) {
                    echo 'Waiting for 10 seconds'
                }
                echo 'Built completed in 10 seconds'
            }        
        }

        stage('Test') {

            steps {
                echo 'Testing..'
            }
        }

        stage('Deploy') {

            steps {
                echo 'Deploying....'
            }
        }
    }
}